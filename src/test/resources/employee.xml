<?xml version="1.0" encoding="UTF-8"?>
<Root
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/zerouwar/Octopus/master/octopus.xsd"
        class="cn.chenhuanming.octopus.entity.Employee">

    <Header name="id" description="ID">
        <Field name="value"
               description="Value"
               color="#74f441"/>
    </Header>

    <Field name="name"
           description="Name"
           font-size="20"
           border="0,1,0,1"/>

    <Header name="job" description="Job" header-color="#4286f4">
        <Field name="company"
               description="Company Name"/>
        <Field name="address"
               description="Address"
               color="#f44271"
               foreground-color="#eaeae5"
               formatter="cn.chenhuanming.octopus.formatter.AddressFormatter"/>
    </Header>

    <Field name="entryDate"
           description="Entry Date"
           date-format="yyyy-MM-dd"/>

    <Field name="working"
           description="Working/Leaved"
           options="Working|Leaved"
           formatter="cn.chenhuanming.octopus.formatter.WorkingFormatter"
           color="#42f4b9"/>

</Root>